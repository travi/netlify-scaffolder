{
  "name": "@travi/netlify-scaffolder",
  "description": "host scaffolder for static sites hosted on Netlify",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "license": "MIT",
  "repository": "travi/netlify-scaffolder",
  "bugs": "https://github.com/travi/netlify-scaffolder/issues",
  "homepage": "https://npm.im/@travi/netlify-scaffolder",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "clean": "rimraf lib/",
    "lint:md": "remark . --frail",
    "lint:js": "eslint . --cache",
    "lint:travis": "travis-lint .travis.yml",
    "lint:sensitive": "ban",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit:base": "mocha --recursive test/unit",
    "test:unit": "nyc run-s test:unit:base",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "run-s clean build:*",
    "build:js": "rollup -c",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/register": "7.10.5",
    "@travi/any": "2.0.10",
    "@travi/babel-preset": "3.0.25",
    "@travi/eslint-config": "1.0.42",
    "@travi/eslint-config-mocha": "1.0.8",
    "ban-sensitive-files": "1.9.7",
    "chai": "4.2.0",
    "codecov": "3.7.0",
    "commitlint-config-travi": "1.3.8",
    "cz-conventional-changelog": "3.2.0",
    "husky": "4.2.5",
    "mocha": "8.0.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "remark-cli": "8.0.1",
    "remark-preset-lint-travi": "1.3.9",
    "rimraf": "3.0.2",
    "rollup": "2.21.0",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "9.0.2",
    "travis-lint": "1.0.0"
  }
}
