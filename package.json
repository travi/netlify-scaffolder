{
  "name": "@travi/netlify-scaffolder",
  "description": "host scaffolder for static sites hosted on Netlify",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "license": "MIT",
  "repository": "travi/netlify-scaffolder",
  "bugs": "https://github.com/travi/netlify-scaffolder/issues",
  "homepage": "https://npm.im/@travi/netlify-scaffolder",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "clean": "rimraf lib/",
    "lint:md": "remark . --frail",
    "lint:js": "eslint . --cache",
    "lint:sensitive": "ban",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit:base": "mocha 'src/**/*-test.js'",
    "test:unit": "nyc run-s test:unit:base",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "run-s clean build:*",
    "build:js": "rollup -c",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib/",
    "templates/"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/register": "7.15.3",
    "@travi/any": "2.0.18",
    "@travi/babel-preset": "3.0.66",
    "@travi/eslint-config": "1.0.81",
    "@travi/eslint-config-mocha": "1.0.12",
    "ban-sensitive-files": "1.9.16",
    "chai": "4.3.4",
    "codecov": "3.8.3",
    "commitlint-config-travi": "1.3.17",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.2",
    "mocha": "9.1.2",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "remark-cli": "10.0.0",
    "remark-preset-lint-travi": "2.0.5",
    "rimraf": "3.0.2",
    "rollup": "2.57.0",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "11.1.2"
  },
  "dependencies": {}
}
